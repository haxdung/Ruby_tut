<% @user ||= current_user %>
<div class="stats">
  <a href="/users/<%= @user.id %>/following">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="/users/<%= @user.id %>/follower">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
